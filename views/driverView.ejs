<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content />
    <meta name="author" content />
    <title>Gozak</title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <!-- <link href="../styles.css" rel="stylesheet" /> -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>

<body>
    <%- include('partials/navbarDriver') %>

    <table class="table table-hover mt-5">
        <thead>
            <tr>
                <th>Order Date</th>
                <th>Destination</th>
                <th>Ongkos</th>
                <th>Nama Customer</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% data.forEach((e)=> {%>
                <% if(e.Status=='Menunggu Driver' ) {%>

                    <tr>
                        <td>
                            <%= e.getOrderDate %>
                        </td>
                        <td>
                            <%= e.destination %>
                        </td>
                        <td>
                            <%= formatCurrency(e.Service.fare) %>
                        </td>
                        <td>
                            nama customer
                        </td>

                        <td>
                            <%= e.Status %>
                        </td>
                        <td>
                            <div>
                                <a href="/driverView/<%= DriverId %>/tolak/<%=e.id%>">
                                    <button class="btn btn-danger">Tolak</button>
                                </a>
                                &nbsp&nbsp
                                <a href="/driverView/<%= DriverId %>/approved/<%= e.id %>">
                                    <button class="btn btn-success">
                                        Terima
                                    </button>
                                </a>
                            </div>
                        </td>
                        </td>

                    </tr>
                    <%}else if(e.Status=='Sukses' ){%>

                        <tr>
                            <td>
                                <%= e.getOrderDate %>
                            </td>
                            <td>
                                <%= e.destination %>
                            </td>
                            <td>
                                <%= formatCurrency(e.Service.fare) %>
                            </td>
                            <td>
                                nama customer
                            </td>

                            <td>
                                <%= e.Status %>
                            </td>
                            <td>
                                Asik dapet duit
                            </td>

                        </tr>
                        <% }else{%>
                            <tr>
                                <td>
                                    <%= e.getOrderDate %>
                                </td>
                                <td>
                                    <%= e.destination %>
                                </td>
                                <td>
                                    <%= formatCurrency(e.Service.fare) %>
                                </td>
                                <td>
                                    nama customer
                                </td>

                                <td>
                                    <%= e.Status %>
                                </td>
                                <td>
                                    Yah nolak <%= formatCurrency(e.Service.fare) %> lumayan buat beli kuaci
                                </td>

                            </tr>
                            <% } %>
                                <% })%>

        </tbody>
    </table>
</body>